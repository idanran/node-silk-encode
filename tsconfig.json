{
    "compilerOptions": {
        "rootDir": "src",
        "outFile": "lib/index.d.ts",
        "target": "es2022",
        "module": "commonjs",
        "declaration": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "strictFunctionTypes": false,
    },
    "include": [
        "src",
    ],
}